---
import Layout from '../layouts/Layout.astro';
---

<Layout title='Page not found' permalink={'/404'} noIndex={true}>
  <div slot='header'></div>
  <div
    class='container flex flex-col items-center justify-center gap-7 py-10 md:flex-row md:py-32'
  >
    <div class='text-left md:text-left'>
      <h1
        class="bg-gradient-to-t from-black to-gray-600 bg-clip-text text-2xl leading-normal text-transparent [font-variation-settings:'wght'_700] md:text-5xl md:leading-normal"
      >
        Page not found!
      </h1>
      <p class='mb-2 text-sm md:text-xl'>
        Sorry, we couldn't find the page you are looking for.
      </p>
      <p>
        <a
          class='whitespace-nowrap text-sm text-[#4b5563] underline decoration-divider/60 decoration-1 underline-offset-2 opacity-100 transition-colors duration-100 ease-in-out hover:no-underline hover:opacity-70 md:text-base'
          href='/'>About</a
        > &middot; <a
          href='/writing'
          class='whitespace-nowrap text-sm text-[#4b5563] underline decoration-divider/60 decoration-1 underline-offset-2 opacity-100 transition-colors duration-100 ease-in-out hover:no-underline hover:opacity-70 md:text-base'
          >Writing</a
        > &middot; <a
          href='/projects'
          class='whitespace-nowrap text-sm text-[#4b5563] underline decoration-divider/60 decoration-1 underline-offset-2 opacity-100 transition-colors duration-100 ease-in-out hover:no-underline hover:opacity-70 md:text-base'
          >Projects</a
        >
      </p>
    </div>
  </div>
  <div slot='footer'></div>
</Layout>
