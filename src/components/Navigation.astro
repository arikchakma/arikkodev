---
import NavigationLink from './NavigationLink.astro';

// prettier-ignore
export type AllowedNavLinks = 'about' | 'writings' | 'projects' | 'notes' | 'chat';
export const navLinks = [
  {
    id: 'about',
    name: 'About',
    url: '/',
  },
  {
    id: 'writings',
    name: 'Writings',
    url: '/writings',
  },
  {
    id: 'notes',
    name: 'Notes',
    url: '/notes',
  },
  {
    id: 'projects',
    name: 'Projects',
    url: '/projects',
  },
];

type Props = {
  activePage: AllowedNavLinks;
};

const { activePage } = Astro.props;
---

<header class='container mt-5'>
  <nav class='flex items-center justify-between gap-2 text-sm sm:text-base'>
    <ul class='flex items-center gap-3'>
      {
        navLinks.map((link) => {
          return (
            <li>
              <NavigationLink
                href={link.url}
                isActive={activePage === link.id}
                name={link.name}
              />
            </li>
          );
        })
      }
    </ul>

    <NavigationLink href='/chat' isActive={activePage === 'chat'} name='Chat' />
  </nav>
</header>
