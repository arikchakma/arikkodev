---
import Location from './Location.astro';
---

<div
  class='gradient-clip relative flex w-full items-center overflow-hidden md:hidden'
>
  <div
    class='animate-ticker-loop relative flex items-center gap-1.5 duration-[20s] hover:[animation-play-state:paused]'
  >
    <div class='flex items-center'>
      <Location />
      <span class='px-1.5'>&middot;</span>
      <Location />
      <span class='px-1.5'>&middot;</span>
      <Location />
      <span class='px-1.5'>&middot;</span>
    </div>
    <div class='absolute right-0 translate-x-full'>
      <div class='flex items-center'>
        <Location />
        <span class='px-1.5'>&middot;</span>
        <Location />
        <span class='px-1.5'>&middot;</span>
        <Location />
      </div>
    </div>
  </div>
</div>
